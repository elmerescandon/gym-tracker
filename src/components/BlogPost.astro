---
const {url, title, author, pubDate, tags} = Astro.props;
---

<div class="card">
    <h2>{title}</h2>
    <p>Written by: {author}</p>
    <p>Published on: {pubDate}</p>
    <a class="blog-link" href={url}>Go to blog</a>
    <div>
        {
            (tags as string[]).map((tag: string) => (
                <a class="tag" href={`/tags/${tag}`}>
                    {tag}
                </a>
            ))
        }
    </div>
</div>

<style>
    .card {
        display: block;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        text-decoration: none;
        color: #333;
        background-color: #f9f9f9;
        transition: background-color 0.3s ease;
    }

    .tag {
        display: inline-block;
        padding: 5px 10px;
        margin-right: 5px;
        margin-bottom: 5px;
        border-radius: 5px;
        background-color: #f0f0f0;
        color: #333;
    }

    .blog-link {
        display: inline-block;
        padding: 5px 10px;
        margin: 20px 0;
        border-radius: 5px;
        background-color: black;
        color: white;
        text-decoration: none;
    }
    .blog-link:hover {
        background-color: #333;
    }
</style>
